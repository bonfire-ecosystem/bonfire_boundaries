
<div
  class="flex items-center focus:outline-none"
  >

  <div>
    
    <span :for={{name, id} <- e(@to_boundaries, nil) |> debug() || [{l("Public"), "public"}]} class="text-sm badge p-3">
      {name}
      <input 
        name="to_boundaries[]"
        value={id}
        type="hidden" />
      <span class="cursor-pointer tooltip ml-1" data-tip={l "Remove this boundary"}>
        <Solid.XIcon class="w-4 h-4 stroke-current" />
      </span>
    </span>

  </div>
</div> 
