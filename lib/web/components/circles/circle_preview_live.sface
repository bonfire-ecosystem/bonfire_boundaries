{#if (@count || Enum.count(@members)) > 0}
  <div class="flex gap-1 avatar-group">
    <Bonfire.UI.Common.AvatarLive
      :for={member <- @members |> Enum.slice(0..2)}
      user={e(member, :subject, nil) || member}
      class={"w-#{@size} h-#{@size} "}
      bg_class="fill-base-content/5 bg-base-content/5 rounded-xl"
    />
    <div
      :if={(@count || Enum.count(@members)) > 3}
      class="align-middle border-0 rounded avatar placeholder"
    >
      <div class={"w-#{@size} h-#{@size} bg-neutral-focus text-neutral-content text-xs font-medium"}>
        <span>+{(@count || Enum.count(@members)) - 3}</span>
      </div>
    </div>
  </div>
{/if}
