            <Icon solid="Trash" class="w-4 h-4 text-error" />
          </div>
        </div>
      </li>
    </ul>
  </div>
  <:open_btn>
    <button type="button" class="btn btn-success btn-sm btn-circle opacity-80">
      <Icon iconify="material-symbols:edit-note" class="w-5 h-5" />
    </button>
  </:open_btn>
  <:action_btns>
    <button class="btn rounded btn-sm normal-case btn-primary">
      {l("Save")}
    </button>
  </:action_btns>
