<div>
  {#if @section == "new_circle"}
    <Bonfire.Boundaries.Web.NewCircleLive
      parent_back={@myself}
      event_target={@myself}
      setting_boundaries={@setting_boundaries}
    />
  {#elseif @edit_circle_id}
    <Bonfire.Boundaries.Web.CircleLive
      id={@edit_circle_id}
      circle_id={@edit_circle_id}
      parent_back={@myself}
      setting_boundaries={@setting_boundaries}
    />
  {#else}
    <div :if={!@setting_boundaries} class="">
      <!-- <div
        :if={e(@acl, :extra_info, :summary, nil)}
        class="pb-3 text-sm font-normal text-base-content/80"
      >{e(@acl, :extra_info, :summary, nil)}</div> -->

      <ul
        role="tablist"
        class="flex items-stretch gap-3 pt-2 mb-4 -m-4 text-sm font-medium border-b bg-base-200 border-base-content/10"
      >
        <!-- Tab -->
        <li>
          <div
            to={~p"/boundaries/acl/#{ulid(@acl)}"}
            phx-click="assign"
            phx-value-section="permissions"
            phx-target={@myself}
            class={
              "cursor-pointer border-b-2 border-transparent hover:bg-base-content/5 inline-flex px-5 py-2.5 text-base-content/60",
              "border-primary !text-base-content": @section == "permissions"
            }
            role="tab"
          >
            {l("Permissions")}
          </div>
        </li>

        <li>
          <div
            to={~p"/boundaries/circle/#{ulid(@acl)}/settings"}
            phx-click="assign"
            phx-value-section="settings"
            phx-target={@myself}
            class={
              "cursor-pointer border-b-2 border-transparent hover:bg-base-content/5 inline-flex px-5 py-2.5 text-base-content/60",
              "border-primary !text-base-content": @section == "settings"
            }
            role="tab"
          >{l("Settings")}</div>
        </li>
      </ul>

