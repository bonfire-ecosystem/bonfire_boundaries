<select
  name={"to_circles[#{@circle_id}]"}
  class={
    "font-normal border border-base-content/30 select-sm text-sm rounded select text-base-content/70",
    "select-xs text-xs pl-1 px-0": !@setting_boundaries
  }
>
  <option
    :for={{id, name} <- Bonfire.Boundaries.Verbs.roles_for_dropdown() ++ @extra_roles}
    value={id}
    selected={if @role == id or (is_nil(@role) and id == :participate), do: true}
  >{name}</option>
</select>